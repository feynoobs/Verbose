<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/tweet_recycler_view_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:background="@null"
        android:padding="8dp" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/tweet_recycler_view_reply_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/tweet_recycler_view_reply_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tweet_recycler_view_reply_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/tweet_recycler_view_reply_image"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tweet_recycler_view_user_name"
                android:layout_height="match_parent"
                android:layout_width="wrap_content"
                android:ellipsize="end"
                android:singleLine="true"
                />
            <TextView
                android:id="@+id/tweet_recycler_view_dot"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/dot"
                android:layout_toEndOf="@id/tweet_recycler_view_user_name"/>
            <TextView
                android:id="@+id/tweet_recycler_view_post_time"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_toEndOf="@id/tweet_recycler_view_dot"/>
            <ImageButton
                android:id="@+id/tweet_recycler_view_other_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@null"
                android:src="@drawable/other"
                android:layout_alignParentEnd="true"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/tweet_recycler_view_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp" />
        <LinearLayout
            android:id="@+id/tweet_media_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageButton
                android:id="@+id/tweet_recycler_view_reply_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@null" />
            <TextView
                android:id="@+id/tweet_recycler_view_reply_count"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content" />
            <ImageButton
                android:id="@+id/tweet_recycler_view_retweet_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@null" />
            <TextView
                android:id="@+id/tweet_recycler_view_retweet_count"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <ImageButton
                android:id="@+id/tweet_recycler_view_favorite_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@null" />
            <TextView
                android:id="@+id/tweet_recycler_view_favorite_count"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>
            <ImageButton
                android:id="@+id/tweet_recycler_view_share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@null" />
            <Space
                android:id="@+id/tweet_recycler_view_space"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
            <ImageButton
                android:id="@+id/tweet_recycler_view_transfer_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="centerInside"
                android:adjustViewBounds="true"
                android:background="@null" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>